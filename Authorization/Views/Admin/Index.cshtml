@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Index";
}
<h2>Users (@Model.Count())</h2>

<a class="btn btn-success" asp-action="Create">Create</a>

<table class="table table-bordered">
    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Email</td>
        <td>Actions</td>
    </tr>
    @foreach (AppUser user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
            </td>
        </tr>
    }
</table>

